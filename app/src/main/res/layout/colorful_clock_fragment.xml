<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ru.akumakeito.clockcustomview.ClockView
        android:id="@+id/clock_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:borderColor="@color/blue"
        app:clockFaceBackgroundColor="@color/pink"
        app:dotColor="@color/white"
        app:hourHandColor="@color/marine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:minuteHandColor="@color/green"
        app:numberColor="@color/purple"
        app:secondHandColor="@color/orange" />

</androidx.constraintlayout.widget.ConstraintLayout>